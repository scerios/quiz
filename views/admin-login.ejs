<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> <%- adminLogin.welcomeMsg %></h1>
            <form action="/adminLogin" method="POST">
                <div class="form-group">
                    <label for="name"><%- adminLogin.nameLabel %></label>
                    <input
                    type="text"
                    id="name"
                    name="name"
                    class="form-control"
                    required
                    />
                </div>
                <div class="form-group">
                    <label for="password"><%- adminLogin.passwordLabel %></label>
                    <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    required
                    />
                </div>
                <button type="submit" class="btn btn-success btn-block"><%- adminLogin.loginBtn %></button>
            </form>
        </div>
    </div>
</div>