<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> <%- register.welcomeMsg %>
            </h1>
            <%- include('partials/error-messages'); %>
            <form action="/register" method="POST">
                <div class="form-group">
                    <label for="name"><%- register.nameLabel %></label>
                    <input
                    type="text"
                    id="name"
                    name="name"
                    class="form-control"
                    placeholder="<%- register.namePlaceholder %>"
                    value="<%= typeof name != 'undefined' ? name : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label for="password"><%- register.passwordLabel %></label>
                    <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="<%- register.passwordPlaceholder %>"
                    value="<%= typeof password != 'undefined' ? password : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label for="confirmPassword"><%- register.confirmPasswordLabel %></label>
                    <input
                    type="password"
                    id="confirmPassword"
                    name="confirmPassword"
                    class="form-control"
                    placeholder="<%- register.confirmPasswordPlaceholder %>"
                    value="<%= typeof confirmPassword != 'undefined' ? confirmPassword : '' %>"
                    />
                </div>
                <button type="submit" class="btn btn-success btn-block">
                    <%- register.registerBtn %>
                </button>
            </form>
            <p class="lead mt-4"><%- register.isRegisteredQuestion %> <a class="text-info" href="/login"><%- register.loginLink %></a></p>
        </div>
    </div>
</div>